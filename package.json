{
  "name": "markbook",
  "version": "0.1.0",
  "description": "A markdown notebook that uses the file system",
  "author": "Stan Lemon <stosh1985@gmail.com>",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development electron main.js",
    "test": "mocha",
    "build": "babel src -d dist",
    "lint": "eslint src",
    "package": "electron-packager-compile . Markbook --overwrite --platform=darwin --arch=x64 --prune --ignore='test' --out=release",
    "rebuild": "electron-rebuild"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "7.1",
    "babel-polyfill": "^6.20.0",
    "babel-preset-env": "^1.1.4",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "electron-prebuilt-compile": "1.3.9",
    "electron-rebuild": "^1.4.0",
    "eslint": "3.8.1",
    "eslint-config-react-app": "^0.5.0",
    "eslint-loader": "1.6.0",
    "eslint-plugin-flowtype": "2.21.0",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.4.1"
  },
  "dependencies": {
    "chokidar": "^1.6.1",
    "date-fns": "^1.21.1",
    "electron": "^1.4.13",
    "electron-compile": "^5.1.1",
    "localforage": "^1.4.3",
    "lodash": "^4.17.2",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "react-redux": "^4.4.6",
    "react-split-pane": "^0.1.57",
    "redux": "^3.6.0",
    "redux-persist": "^4.0.0",
    "simplemde": "^1.11.2"
  },
  "config": {
    "forge": {
      "make_targets": {
        "darwin": [
          "zip"
        ]
      },
      "electronPackagerConfig": {}
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}

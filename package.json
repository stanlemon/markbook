{
  "name": "markbookapp",
  "productName": "Markbook",
  "version": "0.6.5",
  "description": "A markdown notebook",
  "author": "Stan Lemon <stosh1985@gmail.com>",
  "license": "MIT",
  "main": "./src/main.js",
  "scripts": {
    "start": "NODE_ENV=development electron-forge start",
    "test": "mocha",
    "lint": "eslint src",
    "compile": "NODE_ENV=production electron-compile .",
    "package": "NODE_ENV=production electron-forge package",
    "rebuild": "electron-rebuild",
    "publish": "electron-forge publish"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "7.1",
    "babel-preset-env": "^1.2.2",
    "babel-preset-react": "^6.23.0",
    "electron-forge": "2.8.3",
    "electron-prebuilt-compile": "1.6.2",
    "electron-rebuild": "^1.5.7",
    "eslint": "^3.17.1",
    "eslint-config-react-app": "^0.6.2",
    "eslint-loader": "1.6.3",
    "eslint-plugin-flowtype": "2.30.3",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.0"
  },
  "dependencies": {
    "async": "^2.1.5",
    "babel-polyfill": "^6.23.0",
    "chokidar": "^1.6.1",
    "date-fns": "^1.28.0",
    "electron": "^1.6.2",
    "electron-compile": "^6.1.3",
    "font-awesome": "^4.7.0",
    "mkdirp": "^0.5.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-split-pane": "^0.1.59",
    "simplemde": "^1.11.2"
  },
  "config": {
    "forge": {
      "make_targets": {
        "darwin": [
          "zip",
          "dmg"
        ]
      },
      "github_repository": {
        "owner": "stanlemon",
        "name": "markbook",
        "draft": false,
        "prerelease": true
      },
      "electronPackagerConfig": {
        "osx-sign": true
      }
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
